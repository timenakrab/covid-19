{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "ES5",
    "lib": [
      "ES6",
      "DOM"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "rootDir": "pages",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressExcessPropertyErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "files": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
